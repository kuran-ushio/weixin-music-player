@import "/template/sheet/sheet.wxss";
@import "/template/public/footer-player.wxss";
@import "/template/underscore/underscore.wxss";

/* pages/home/index.wxss */
/* header start */
.header{
  display: flex;
  width: 100vw;
  height: 50px;
  background: #e6473b;
  color: #fadad8;
}
.header navigator{
  flex: 1;
  text-align: center;
  line-height: 50px;
}
.header navigator text{
  padding: 0 4rpx 6px;
}
.header navigator.on text{
  background: linear-gradient(#fff, #fff) no-repeat center bottom/100% 2px;
}
/* header end */

.tab-container{
  overflow-y: scroll;
  width: 100vw;
  height: calc(100vh - 50px);
}

/* banner start */
.banner swiper{
  height: 300rpx;
  background: linear-gradient(#e6473b, #e6473b) no-repeat left top/100% 100px;
}
.banner swiper-item{
  padding: 0 16rpx;
  box-sizing: border-box;
}
.banner image{
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 5px;
}
/* banner end */

/* 图标导航入口 start */
.entry{
  display: flex;
  justify-content: space-around;
  padding: 40rpx 0;
  border-bottom: 1px solid #f6f6f6;
  font-size: 12px;
  text-align: center;
}
.entry navigator{
  flex: 1;
}
.entry view{
  position: relative;
  width: 40rpx;
  height: 40rpx;
  margin: 0 auto 10px;
  padding: 20rpx;
  background: #e6473b;
  border-radius: 50%;
  box-shadow: 0 0 20px 2px #fadad8;
}
.entry image{
  width: 100%;
  height: 100%;
}
/* 图标导航入口 end */

/* 歌单列表 start */
.home-sheet{
  margin-top: 10px;
  padding: 0 8px;
}
/* 歌单列表 end */