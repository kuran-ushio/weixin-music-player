@import "/template/public/footer-player.wxss";
@import "song.wxss";
@import "/template/underscore/underscore.wxss";

/* pages/search/list.wxss */
.container{
  position: relative;
}
/* header start */
.header{
  height: 40px;
  padding: 0 6px;
  background: #e6473b;
}
.header form{
  display: block;
  border-bottom: 1px solid #f5c6c3;
}
.header input{
  width: calc(100% - 40px);
  height: 36px;
  min-height: 36px;
  max-height: 36px;
  padding-left: 2px;
  font-size: 16px;
  color: #fff;
  box-sizing: border-box;
}
.input-style{
  font-size: 14px;
  color: #f5c6c3;
}
.header button{
  width: 20px;
  height: 20px;
  margin: 7px;
  padding: 0;
  background: transparent;
}
.header button image{
  display: block;
  width: 100%;
  height: 100%;
}
/* header end */

/* 搜索结果列表 start */
.result-list{
  height: calc(100vh - 40px);
}
/* 搜索结果列表 end */