@import "/template/public/footer-player.wxss";

/* pages/search/index.wxss */
.container{
  position: relative;
}
/* header start */
.header{
  padding-top: 10px;
  background: #e6473b;
}
.search-box{
  height: 40px;
  padding: 0 6px;
}
.search-box form{
  display: block;
  border-bottom: 1px solid #f5c6c3;
}
.search-box input{
  width: calc(100% - 40px);
  height: 36px;
  min-height: 36px;
  max-height: 36px;
  padding-left: 2px;
  font-size: 16px;
  color: #fff;
  box-sizing: border-box;
}
.input-style{
  font-size: 14px;
  color: #f5c6c3;
}
.search-box button{
  width: 22px;
  height: 22px;
  margin: 7px;
  padding: 0;
  background: transparent;
}
.search-box image{
  display: block;
  width: 100%;
  height: 100%;
}
/* header end */

/* 历史记录 start */
.history{
  overflow-y: auto;
  height: calc(100vh - 40px);
  padding: 8px 10px 18px;
  box-sizing: border-box;
}
.history-header{
  line-height: 40px;
}
.history-header text{
  font-weight: 600;
}
.history-header button{
  width: 40px;
  height: 40px;
  padding: 12px;
  background: transparent;
}
.history-header button.on{
  line-height: 36px;
  background: #eee;
}
.history-header image{
  display: block;
  width: 16px;
}
.history-body navigator{
  float: left;
  margin: 0 10px 10px 0;
  padding: 0 12px;
  height: 30px;
  line-height: 30px;
  color: #313131;
  background: #f3f3f3;
  border-radius: 15px;
}
/* 历史记录 end */