.song-list{
  padding-left: 6px;
  min-height: calc(100% - 50px);
}
.song-item{
  border-bottom: 1px solid #e6e6e6;
}
.song-item .item-lf{
  width: 100%;
  margin: 8px 0;
}
.song-item .item-lf text{
  display: block;
}
.song-item .item-lf text:nth-child(1){
  font-size: 16px;
  line-height: 24px;
}
.song-item .item-lf text:not(:first-child){
  color: #808080;
  font-size: 10px;
  line-height: 18px;
}
.song-item .item-rgt{
  margin: 9px 4px 0 0;
  padding: 10px;
  background: none;
}
.song-item .item-rgt image{
  display: block;
  width: 18px;
  height: 18px;
}